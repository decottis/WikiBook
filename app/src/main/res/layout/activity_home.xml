<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s.wikibook.HomeActivity"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WIKI BOOK"
        android:textSize="50dp"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp"
        />

    <Button
        android:id="@+id/btn_collection"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="displayCollection"
        android:text="@string/collection"
 />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/BookCreator"
        android:id="@+id/btn_create"
        android:onClick="displayBookCreator"
 />

    <Button
        android:id="@+id/btn_book_filter_catalog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="displayBookFilterCatalog"
        android:text="@string/filters"
 />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/BookFilterCreator"
        android:id="@+id/btn_create_filter"
        android:onClick="displayBookFilterCreator"
 />

</LinearLayout>
